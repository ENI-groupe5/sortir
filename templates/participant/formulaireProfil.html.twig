{% extends 'base.html.twig' %}

{% block title %}Modifier Profil{% endblock %}

{% block body %}

    {% if app.user.id == participant.id %}
        <h1>Modifier votre profil</h1>
        <div id="profil">
            {{ form_start(formulaire) }}
            <div id="avatarUpload">
                {% if app.user.avatar is empty %}
                    {{ form_row(formulaire.avatar) }}
                {% else %}
                    <img id="avatar" alt="avatar"  src="{{ asset('uploads/avatars/') }}{{ participant.avatar }}">
                    {{ form_row(formulaire.avatar) }}
                {% endif %}
            </div>
            <div>
                <div>
                    {{ form_row(formulaire.username) }}
                    {{ form_row(formulaire.prenom) }}
                    {{ form_row(formulaire.nom) }}
                    {{ form_row(formulaire.telephone) }}
                </div>
                <div>
                    {{ form_row(formulaire.email) }}
                    {{ form_row(formulaire.password) }}
                    {{ form_row(formulaire.site) }}
                </div>
            </div>
            <div>
                <div>
                    <button>{{ button_label|default('Enregistrer') }}</button>
                    {{ form_end(formulaire) }}
                </div>
                <div>
                    <button><a href="{{ path('afficher_profil', { 'id' : app.user.id}) }}">Annuler</a></button>
                </div>
            </div>
        </div>
    {% else %}
        <h1>Vous ne pouvez pas modifier ce profil !</h1>
        <br>
        <img src="TODO" alt="non_modifiable"/>
    {% endif %}

{% endblock %}