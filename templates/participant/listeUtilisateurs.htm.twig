{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block main %}
    <h1 class="text-muted">Liste des utilisateurs</h1>
    <br>
    <a href="{{ path('app_register') }}" class="bouton">
        <img alt="plus" class="plus" src="{{ asset('build/images/add.svg') }}"> Ajouter un utilisateur
    </a>
    <br><br><br>
    <div id="utilisateur" class="table-responsive-xl">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>Ville de rattachement</th>
                <th> Rôle de l'utilisateur</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in participants %}
                <tr>
                        <td>{{ participant.pseudo }}</td>
                        <td>{{ participant.prenom }}</td>
                        <td>{{ participant.nom }}</td>
                    {% endif %}
                    {% if participant.telephone is null %}
                        <td><i>Pas de numéro de téléphone renseigné.</i></td>
                    {% else %}
                        <td>{{ participant.telephone }}</td>
                    {% endif %}
                        <td>{{ participant.email }}</td>
                        <td>{{ participant.site.nom }}</td>
                        <td>{{ participant.roles | json_encode }}</td>
                    <td>
                        <div class="d-inline-block">
                            {{ include('participant/supprimerUtilisateurs.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">Aucun utilisateur trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
