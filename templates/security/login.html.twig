{% extends 'base.html.twig' %}

{% block title %}Log in! &middot; {{parent()}}{% endblock %}

{% block main %}
    <h1>Se connecter</h1><hr>
    {# Formulaire d'authentification#}
    <form method="post">
        {# message d'erreur si l'utilisateur n'est pas trouv√©#}
        {% if error %}
            <div class="alert alert-warning" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form-group">
            <label for="inputUsername">Nom d'utilisateur</label>
            <input type="text" class="form-control" value="{{ last_username }}" name="username" id="inputUsername" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" class="form-control" value="{{ last_username }}" name="password" id="inputPassword" required placeholder="******************">
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <div >
            <div ></div>
            <label>
                <input type="checkbox" name="_remember_me">
                <span>Se souvenir de moi!</span>
            </label>
        </div>
        <div>
            <div ></div>
            <div>
                <div class="form-group">
                    <button class="bouton" type="submit">
                        Se connecter
                    </button>

                </div>

            </div>
        </div>
    </form>

{% endblock %}
